<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <EditText
        android:id="@+id/addbook_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:gravity="center"
        android:hint="@string/addbook_edit_hint"
        android:text="9787110079416"
        android:background="@drawable/bf_edit_corner"/>
    <!--android:text="9787565208793"-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/addbook_edit"
        android:layout_alignRight="@id/addbook_edit"
        android:layout_above="@id/addbook_edit"
        android:layout_marginBottom="@dimen/views_normal_distance"
        android:gravity="center"
        android:text="@string/addbook_text_tips"/>

    <Button
        android:id="@+id/addbook_finish_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/addbook_edit"
        android:layout_alignRight="@id/addbook_edit"
        android:layout_below="@id/addbook_edit"
        android:layout_marginTop="@dimen/views_normal_distance"
        android:text="@string/addbook_btn_msg" />

</RelativeLayout>